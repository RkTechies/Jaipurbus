<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_haed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/view22"
                android:layout_width="@dimen/_30dp"
                android:layout_height="65dp"
                android:layout_marginStart="@dimen/_30dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/new1" />

            <com.codersworld.jplibs.customFonts.SBTextViewRegular
                android:id="@+id/txt_stop11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_40dp"
                android:layout_toEndOf="@+id/view22"
                android:gravity="center_vertical"
                android:text="stop1"
                android:textColor="@color/white"
                android:textSize="@dimen/_20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgBus2"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_below="@+id/txt_stop11"
                android:layout_alignStart="@+id/txt_stop11"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_minibus" />

            <com.codersworld.jplibs.customFonts.SBTextViewRegular
                android:id="@+id/txt_bus_noo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_stop11"
                android:layout_alignStart="@+id/imgBus2"
                android:layout_marginStart="@dimen/_30dp"
                android:layout_marginTop="9dp"
                android:text=" 8 "
                android:textColor="#FFFFFF"
                android:textSize="22dp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="38dp"
                android:layout_height="36dp"
                android:layout_below="@+id/txt_stop11"
                android:layout_marginStart="33dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/txt_bus_noo"
                android:src="@drawable/ic_stop"
                app:tint="@color/colorAccent" />

            <com.codersworld.jplibs.customFonts.SBTextViewRegular
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_stop11"
                android:layout_alignStart="@+id/imageView9"
                android:layout_alignTop="@+id/txt_bus_noo"
                android:layout_marginStart="45dp"
                android:layout_marginTop="0dp"
                android:text="21"
                android:textColor="#fff"
                android:textSize="@dimen/_20dp" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignStart="@+id/view22"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4.7dp"
                android:layout_marginTop="22.2dp"
                android:src="@drawable/ic_change_bus_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_middle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_haed"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/view2"
                android:layout_width="@dimen/_30dp"
                android:layout_height="66dp"
                android:layout_marginStart="@dimen/_30dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/new1" />

            <com.codersworld.jplibs.customFonts.SBTextViewRegular
                android:id="@+id/txt_stop"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_40dp"
                android:layout_toEndOf="@+id/view2"
                android:gravity="center_vertical"
                android:text="roots"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <com.codersworld.jplibs.customFonts.SBTextViewRegular
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="37dp"
                android:paddingTop="4dp"
                android:text="08"
                android:textColor="#ed171717"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_middle"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <com.codersworld.jplibs.customFonts.SBTextViewBold
                android:id="@+id/txt_stop_end"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="100dp"
                android:gravity="center_vertical"
                android:text="End_root"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="59dp"
                android:layout_height="@dimen/_40dp"
                android:layout_alignTop="@+id/txt_stop_end"
                android:layout_alignParentStart="true"
                android:layout_marginStart="17dp"
                android:src="@drawable/ic_destination_icon" />
        </RelativeLayout>
    </RelativeLayout>
</layout>